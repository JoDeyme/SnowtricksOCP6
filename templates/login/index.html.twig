{% extends "/base.html.twig" %}


{# ... #}
{% block body %}
	<section class="dark-wrapper opaqued parallax" data-parallax="scroll" data-image-src="{{asset('assets/img/bg/bg3.jpg')}}" data-speed="0.7">
		<div class="section-inner text-center">
			<div class="container">
				<div class="row">
					<div class="col-sm-8 col-sm-offset-2 mt30 wow">
						<h2 class="section-heading">Connexion</h2>
					</div>
				</div>
			</div>
		</div>
	</section>


	<section>
		<div class="section-inner text-center">
			<div class="container">
				{% if error %}
					<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% for message in app.flashes('warninglogin') %}
					<div class="alert alert-warning text-center" role="alert">
						{{message}}.
					</div>
				{% endfor %}

				<form action="{{ path('login') }}" method="post">
					<label for="username">Email:</label>
					<input type="text" id="username" name="_username" value="{{ last_username }}"/>

					<label for="password">Password:</label>
					<input type="password" id="password" name="_password"/>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					{# If you want to control the URL the user is redirected to on success
																																																																									        <input type="hidden" name="_target_path" value="/account"/> #}

					<button type="submit">login</button>
				</form>

				<div class="section-inner text-center">
					<div class="container">
						<div class="row">
							<div class="col-sm-8 col-sm-offset-2 mt30 wow">
								<h2 class="section-heading">Pas encore inscrit ?</h2>
								<a href="{{ path('app_register') }}">Cr√©er un compte</a>
							</div>
						</div>
					</div>
				</div>
			</div>

		</section>
	{% endblock %}
